// -*- mode: jsonc -*-
{
    "font": "Hurmit Nerd Font:size=13",
    "layer": "top", // Waybar at top layer
    "position": "left", // Waybar position (top|bottom|left|right)
    //"height": 30, // Waybar height (to be removed for auto height)
    "width": 12, // Waybar width
    "spacing": 8, // Gaps between modules (4px)
    //"margin-top": 2,
    //"margin-bottom": 2,
    "mode": "dock",

    // Choose the order of the modules
    "modules-left": [
        "clock",
	"systemd-failed-units",
        "hyprland/submap" // keyboard modes e.g resize-mode
	//"hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"

    ],
    "modules-right": [
        "group/hidetray",
	"privacy",
        "pulseaudio",
	"custom/power",
	"group/hardware"
    ],

     "group/hardware": {
	"rotate": 90,
	"orientation": "inherit",
	"modules": [
		{{ if .hasBattery }}"battery",{{ end }},
		"cpu", 
		"temperature",
		"memory"
	], 
	"drawer": {
		"transition-duration": 500, 
		"children-class": "hw-drawer",
		"transition-left-to-right": false
	}

    },

    "group/hidetray":{ 
    	"orientation": "inherit",
    	"modules": [
	    "custom/hider",
	    "tray"],
    	"drawer": {
	    "transition-duration": 500,
	    "children-class": "hw-drawer",
	    "transition-left-to-right":false
    	}
    },

     "hyprland/workspaces": {
   	 "format": "{icon}",
	 "show-special": true,
   	 "on-click": "activate",
   	 "on-scroll-up": "hyprctl dispatch workspace e-1",
   	 "on-scroll-down": "hyprctl dispatch workspace e+1",
   	 "format-icons": {
     	     "active": "",
     	     "default": ""
    	}
    },

    "hyprland/submap": {
	"rotate": 90,
        "format": "<span style=\"italic\">{}</span>"
    },

    "hyprland/window": {
	//"rotate": 90,
	"format": "",
	"icon": true	
    },

    "privacy": {
    "icon-size": 18
    },

    "tray": {
	"rotate": 90,
	"show-passive-items": true,
        //"icon-size": 21,
        "spacing": 10
    },
    "clock": {
	"interval": 1,
	"format": "{:%H\n%M}",
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %m %d}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%H\n%M\n%S}"
    },

   
    "cpu": {
	"rotate": 90,
        "format": "{usage}% ",
        "tooltip": false
    },
    "memory": {
	"rotate": 90,
        "format": "{}% "
    },
    "temperature": {
	"rotate": 90,
        // "thermal-zone": 2,
        //"hwmon-path": "/sys/class/hwmon/hwmon8/temp1_input",
	"hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
       "input-filename": "temp1_input",	
        "critical-threshold": 80,
        "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
	"format-icons": ["", "", "", "", ""]
    },

{{ if .hasBatter }}
    "battery": {
	"full-at": 80,
	"on-click": "uwsm app -- tlpui",
        "states": {
	    "full": 70,
            "good": 50,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-full": "{icon}",
        "format-charging": "",
        "format-plugged": "",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""],
	"tooltip": true,
	"tooltip-format": "{capacity}%\n{time}\nHealth: {health}%"
    },
{{ end }}
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": " {icon}\n{volume}%",
        "format-bluetooth": " {icon}\n{volume}%",
        "format-bluetooth-muted": "  {icon}",
        "format-muted": "  ",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""],
	    "tooltip-format": "Speaker: {volume}%\nMic: {source_volume}%"
        },
        "on-click": "uwsm app -- pavucontrol"
    },

    "systemd-failed-units": {
	"hide-on-ok": true, // Do not hide if there is zero failed units.
	"format": "✗ {nr_failed}",
	"format-ok": "✓",
	"system": true, // Monitor failed systemwide units.
	"user": true, // Ignore failed user units.
	"on-click": "ghostty --hold systemctl --user --failed",
	"on-click-release": "ghostty --hold systemctl --failed"
    },

    "custom/power": {
        "format" : "⏻",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "systemctl shutdown",
			"reboot": "systemctl reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    },

    "custom/hider": {
        "format": "",
	"tooltip": false
    }
}   
